<Window x:Class="PracticaFinalInterfaces3.AddEjecucion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaFinalInterfaces3"
        mc:Ignorable="d"
        Title="AddEjecucion" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Margin="0,15" Content="Añadir ejecución" HorizontalAlignment="Center" FontSize="30"/>


        <StackPanel Margin="150,10" Grid.Row="2" VerticalAlignment="Center">
            <Button Name="añadirEjecucion" Content="Añadir" Click="añadirEjecucion_Click" IsDefault="True"/>
        </StackPanel>

        <Grid Grid.Row="1">


            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3.5*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Repeticiones"></Label>
                <Label Grid.Column="0" Grid.Row="1" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Peso"></Label>
                <Label Grid.Column="0" Grid.Row="2" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Hora"></Label>
                <Label Grid.Column="0" Grid.Row="3" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Fecha"></Label>

                <TextBox Name="repeticiones" Grid.Column="1" Margin="20" VerticalAlignment="Center" PreviewKeyDown="TextBox_PreviewKeyDown" />
                <TextBox Name="peso" Margin="20" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" PreviewKeyDown="TextBox_PreviewKeyDown" PreviewKeyUp="TextBox_PreviewKeyUp"/>
                <TextBox Name="hora" Grid.Column="1" Grid.Row="2" Margin="10" VerticalAlignment="Center" Background="White" PreviewKeyUp="TextBox_PreviewKeyUp"/>
                <DatePicker Name="fecha" Grid.Column="1" Grid.Row="3" Margin="10" VerticalAlignment="Center" Background="White" 
                        SelectedDateFormat="Short"/>


                <Label Name="errorRepeticiones" Grid.Column="1" Grid.Row="0" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Campo vacio o incorrecto, por favor introduzca un valor" FontSize="8" Foreground="Red" Visibility="Hidden"/>
                <Label Name="errorPeso" Grid.Column="1" Grid.Row="1" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Campo vacio o incorrecto, por favor introduzca un valor" FontSize="8" Foreground="Red" Visibility="Hidden"/>
                <Label Name="errorFecha" Grid.Column="1" Grid.Row="3" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Campo vacio o incorrecto, por favor introduzca una fecha" FontSize="8" Foreground="Red" Visibility="Hidden"/>
                <Label Name="errorHora" Grid.Column="1" Grid.Row="2" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Campo vacio o incorrecto, por favor introduzca una hora" FontSize="8" Foreground="Red" Visibility="Hidden"/>

            </Grid>
        </Grid>

    </Grid>
</Window>
