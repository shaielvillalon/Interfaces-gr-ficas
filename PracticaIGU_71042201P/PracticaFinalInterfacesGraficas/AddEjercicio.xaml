<Window x:Class="PracticaFinalInterfaces3.AddEjercicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaFinalInterfaces3"
        mc:Ignorable="d"
        Title="AddEjercicio" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Margin="0,15" Content="Añadir ejercicio" HorizontalAlignment="Center" FontSize="30"/>


        <StackPanel Margin="150,10" Grid.Row="2" VerticalAlignment="Center">
            <Button Name="añadirEjercicio" Content="Añadir" Click="añadirEjercicio_Click" IsDefault="True"/>
        </StackPanel>

        <Grid Grid.Row="1">


            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3.5*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Nombre"></Label>
                <Label Grid.Column="0" Grid.Row="1" Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Descripción"></Label>
                <Label Grid.Column="0" Grid.Row="2" Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Grupo Muscular"></Label>
                <TextBox Name="nombreEjercicio" Grid.Column="1" Margin="20" VerticalAlignment="Center" PreviewKeyDown="TextBox_PreviewKeyDown"/>
                <TextBox Name="descripcionEjercicio" Margin="20" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" PreviewKeyDown="TextBox_PreviewKeyDown" PreviewKeyUp="TextBox_PreviewKeyUp"/>
                <TextBox Name="grupoEjercicio" Margin="20" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" PreviewKeyUp="TextBox_PreviewKeyUp"/>

                <Label Name="errorNombre" Grid.Column="1" Grid.Row="0" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Campo vacio o incorrecto, por favor introduzca una cadena" FontSize="8" Foreground="Red" Visibility="Hidden"/>
                <Label Name="errorDescripcion" Grid.Column="1" Grid.Row="1" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Campo vacio o incorrecto, por favor introduzca una cadena" FontSize="8" Foreground="Red" Visibility="Hidden"/>
                <Label Name="errorGrupo" Grid.Column="1" Grid.Row="2" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Campo vacio o incorrecto, por favor introduzca una cadena" FontSize="8" Foreground="Red" Visibility="Hidden"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
