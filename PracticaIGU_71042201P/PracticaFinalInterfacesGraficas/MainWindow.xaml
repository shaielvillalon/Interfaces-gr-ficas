<Window x:Class="PracticaFinalInterfaces3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaFinalInterfaces3"
        mc:Ignorable="d"
        Title="IGU Fitness Tracker 2025" Height="500" Width="800"
        MinHeight="500" MinWidth="500">
    <Grid>


        <TabControl SelectedIndex="0" Margin="5">
            <TabItem Header="Ejercicios">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="ListaEjercicios" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding Ejercicios}"
                        IsReadOnly="True"  AutoGenerateColumns="False" SelectionChanged="ListaEjercicios_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="3*" CanUserSort="False" />
                            <DataGridTextColumn Header="Grupos Musculares" Binding="{Binding GruposMusculares}" Width="1.5*" CanUserSort="False"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Grid.Row="1">
                        <Button Name="BotonAñadir" Click="BotonAñadir_Click" Content="Añadir" Width="75" Margin="5"/>
                        <Button Name="BotonEliminarEjercicio" Click="BotonEliminarEjercicio_Click" Content="Eliminar" Width="75" Margin="5"/>
                    </StackPanel>

                </Grid>

            </TabItem>


            <TabItem Header="Daily insight" Height="20" VerticalAlignment="Top">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Grid.Row="0">
                        <Button x:Name="PreviousDayButton" IsEnabled="False" Content="Día anterior" Width="100" Height="20" Margin="5" Click="PreviousDayButton_Click"/>
                        <Button x:Name="TodayButton" Content="Hoy" Width="100" Height="20" Margin="5" Click="TodayButton_Click"/>
                        <Button x:Name="NextDayButton" IsEnabled="False" Content="Día siguiente" Width="100" Height="20" Margin="5" Click="NextDayButton_Click"/>
                    </StackPanel>

                    <!--<TextBlock x:Name="SelectedDateText" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,10" /> -->

                    <TextBlock x:Name="TextoEjercicio" Text="Fecha seleccionada: " FontSize="16" 
                               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,10"/>



                        <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" SizeChanged="Window_SizeChanged">
                            <Canvas x:Name="GraphCanvas" Width="400" Height="275" Background="White" Loaded="GraphCanvas_Loaded"/>
                        </Grid>



                </Grid>

            </TabItem>
        </TabControl>


    </Grid>
</Window>