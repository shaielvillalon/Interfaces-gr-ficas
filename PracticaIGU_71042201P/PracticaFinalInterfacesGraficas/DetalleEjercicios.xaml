<Window x:Class="PracticaFinalInterfaces3.DetalleEjercicios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaFinalInterfaces3"
        mc:Ignorable="d"
        Title="DetalleEjercicios" Height="450" Width="800"
        MinHeight="450" MinWidth="950"
        SizeChanged="Window_SizeChanged">
    <Grid>

        <TabControl SelectedIndex="0" x:Name="tabControl" Margin="0,5,10,10">
            <TabItem Header="Ejecuciones">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="ListaEjecuciones" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                ItemsSource="{Binding Ejecuciones}" SelectionChanged="ListaEjecuciones_SelectionChanged"
                AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Repeticiones" Binding="{Binding Repeticiones}" Width="*"/>
                            <DataGridTextColumn Header="Peso" Binding="{Binding Peso}" Width="*" CanUserSort="False" />
                            <DataGridTextColumn Header="FechayHora" Binding="{Binding FechaYHora}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" Grid.Row="1">
                        <Button Name="BotonAñadirEjecucion" Click="BotonAñadirEjecucion_Click" Content="Añadir" Width="75" Margin="5"/>
                        <Button Name="BotonEliminarEjecucion" IsEnabled="False" Click="BotonEliminarEjecucion_Click" Content="Eliminar" Width="75" Margin="5"/>
                    </StackPanel>
                </Grid>


            </TabItem>


            <TabItem Header="Gráfico">

                <Canvas x:Name="panel" Background="White" Loaded="panel_Loaded"/>

            </TabItem>
        </TabControl>




    </Grid>
</Window>
